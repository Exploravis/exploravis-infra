kind: github
version: v3
metadata:
  name: github
spec:
  client_id: "{{ github_client_id }}"
  client_secret: "{{ github_client_secret }}"
  redirect_url: "https://{{ teleport_host | regex_replace(':.*$', '') }}/v1/webapi/github/callback"
  display: "GitHub"
  teams_to_roles:
    - organization: "{{ github_org }}"
      team: "ea-admin"
      roles: ["admin"]
    - organization: "{{ github_org }}"
      team: "ea-team"
      roles: ["admin"]
    - organization: "{{ github_org }}"
      team: "ea-devops"
      roles: ["devops"]
    - organization: "{{ github_org }}"
      team: "ea-developers"
      roles: ["developer"]
    - organization: "{{ github_org }}"
      team: "ea-readonly"
      roles: ["readonly"]
